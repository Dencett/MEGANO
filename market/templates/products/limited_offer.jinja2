<div class="Section-columnSection Section-columnSection_mark">
    <header class="Section-columnHeader">
        <strong class="Section-columnTitle">{{_("ОГРАНИЧЕННЫЕ ПРЕДЛОЖЕНИЯ")}}</strong>
    </header>
    <div class="Card"><a class="Card-picture" href="{{ url('products:product-detail', pk=min_price_product.product.pk ) }}"><img src="{{ min_price_product.product.preview.url }}" alt="card.jpg"/></a>
        <div class="Card-content">
            <strong class="Card-title"><a href="{{ url('products:product-detail', pk=min_price_product.product.pk ) }}">{{ min_price_product.product.name }}</a></strong>
                <div class="Card-description">
                    <div class="Card-cost"><span class="Card-priceOld">{{ min_price_product.price }}₽</span><span class="Card-price">{{ min_price_product.price }}₽</span></div>
                    <div class="Card-category">{{ min_price_product.product.category.name }}</div>
                </div>
                <div class="CountDown" data-date="31.09.2020 03:59">
                    <div class="CountDown-block">
                        <div class="CountDown-wrap">
                            <div class="CountDown-days"></div>
                            {% trans %}
                            <span class="CountDown-label">days</span>
                        </div>
                    </div>
                    <div class="CountDown-block">
                        <div class="CountDown-wrap">
                            <div class="CountDown-hours"></div>
                            <span class="CountDown-label">hours</span>
                        </div>
                    </div>
                    <div class="CountDown-block">
                        <div class="CountDown-wrap">
                            <div class="CountDown-minutes"></div>
                            <span class="CountDown-label">mins</span>
                        </div>
                    </div>
                    <div class="CountDown-block">
                        <div class="CountDown-wrap">
                            <div class="CountDown-secs"></div>
                            <span class="CountDown-label">secs</span>
                            {% endtrans %}
                        </div>
                    </div>
                </div>
          </div>
    </div>
</div>
