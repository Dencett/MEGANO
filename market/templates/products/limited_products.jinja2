<div class="Slider Slider_carousel">
    <header class="Section-header Section-header_close">
        <h2 class="Section-title">Ограниченный тираж</h2>
        <div class="Section-control">
            <div class="Slider-navigate"></div>
        </div>
    </header>
    <div class="Slider-box Cards">
        {% for limited_product in limited_products %}
            <div class="Slider-item">
                <div class="Slider-content">
                    <div class="Card"><a class="Card-picture" href="{{ url('products:product-detail', pk=limited_product.product.pk ) }}"><img src="{{ limited_product.product.preview.url }}" alt="card.jpg" style="width: 200px;"/></a>
                        <div class="Card-content">
                            <strong class="Card-title"><a href="{{ url('products:product-detail', pk=limited_product.product.pk ) }}">{{ limited_product.product.name }}</a>
                            </strong>
                            <div class="Card-description">
                                <div class="Card-cost"><span class="Card-price">{{ limited_product.price }}₽</span>
                                </div>
                                <div class="Card-category">{{ limited_product.product.category.name }}
                                </div>
                                <div class="Card-hover"><a class="Card-btn" href="#"><img src="{{ static('assets/img/icons/card/cart.svg') }}" alt="cart.svg" /></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
