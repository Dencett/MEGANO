{% extends 'base.jinja2' %}


{% block title %}
Shop detail
{% endblock %}


{% block middle %}
<div class="Middle Middle_top">
  <div class="Section Section_column Section_columnLeft">
    <div class="wrap">
      <div class="Section-column">
        <div class="Section-columnSection">
          <header class="Section-header">
            <strong class="Section-title">Навигация</strong>
          </header>
          <div class="Section-columnContent">
            <div class="NavigateProfile">
              <ul class="menu menu_vt">
                <li class="menu-item_ACTIVE menu-item">
                  <a class="menu-link" href="#">Информация о магазине</a>
                </li>
                <li class="menu-item"><a class="menu-link" href="{{ url('shops:shop-update', pk=shop.pk) }}">Редатировать информацию</a>
                </li>
                <li class="menu-item"><a class="menu-link" href="{{ url('shops:shop_products', pk=shop.pk) }}">Товары магазина</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- ==================================================================================-->
      <div class="Section-content">
        <div class="Account">
          <div class="Account-group">
            <div class="Account-column">
              <!-- =========================== shop avatar =======================================-->
              {% if shop.avatar %}
              <div class="Account-avatar"><img src="{{ shop.avatar.url }}" alt="card.jpg" />
                {% else %}
                <h2>У магазина нет аватара</h2>
                {% endif %}
              </div>
              <!-- =========================== shop avatar =======================================-->
            </div>
            <div class="Account-column">
              <div class="Account-name">{{ shop.name }}</div>
              <br>
              <p>Телефон магазина: {{ shop.phone }}</p>
              <p>Email магазина: {{ shop.email }}</p>
              <a class="Account-editLink" href="profile.html">Редактировать профиль</a>
            </div>
          </div>
          <div class="Account-group">
            <div class="Account-column">
              <h2>Shop name: {{ shop.name }}</h2>
              <p>User related: {{ shop.user }}</p>
              <p style="max-width: 60%;">User related: {{ shop.about }}</p>
              <p>Shop phone: {{ shop.phone }}</p>
              <p>Shop email: {{ shop.email }}</p>
              <h2>Товары магазина</h2>
            </div>
          </div>

          <div class="Cards Cards_blog" style="margin-bottom:40px;">
            <ul class="Cards Cards_blog">
            {% for product in shop.products.all() %}
              <li class="Card">
                <a class="Card-picture" href="{{ url('products:product-detail', pk=product.pk) }}">
                <img  src="{{ product.preview.url }}" alt="миникартинка товара"></a>
                <div class="Card-content">
                  <strong class="Card-title">
                    <a href="{{ url('products:product-detail', pk=product.pk) }}">{{ product.name }}</a>
                  </strong>
                  <div class="Card-description">
                    {{ product.description|wordcount }}
                    {% if product.description|length > 70  %}
                      {{ product.description[:45] + '...' }}
                    {% endif %}
                  </div>
                </div>
              </li>
            {% endfor %}
            </ul>
          </div>
        </div>
      </div>
  </div>
</div>
</div>

{% endblock %}

{% block shop_content %}
<h1>Block content</h1>

{% endblock %}
