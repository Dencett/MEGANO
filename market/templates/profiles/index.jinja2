{% extends 'base.jinja2' %}

{% block title %}
Home page
{% endblock %}

{% block extraheader %}

{% endblock %}

{% block middle %}


<div class="Middle">
  <div class="Section">
      <div class="wrap">
        <div class="wrapper">
          <h1 style="text-align: center;">Главная страница маркетплейса (Test Profiles)</h1>

    {% if user.is_authenticated %}
      <div style="display: flex; flex-direction: column; align-items: center;">
        <p style="text-align: center; font-size:1.25em;">Добро пожаловать <b>{{ request.user.username }}</b>.</p>

        <p><a href="{{ url('profiles:logout') }}" class="btn btn_square btn_dark">Выход из аккаунта</a></p>
        <br>
        <p><a href="{{ url('profiles:about-user') }}" class="btn btn_square btn_dark">Личный кабинет</a></p>
        <br>
        <p><a href="{{ url('profiles:change-password') }}" class="btn btn_square btn_dark">Сменить пароль</a></p>
        <br>
      </div>


        {% if user.is_staff %}
            <p><a href="../admin/">Перейти в админ-панель</a></p>
        {% endif %}

    {% else %}

    <p>Вы просматриваете страницу как "Анонимный" пользователь</p>
    <p><a href="{{ url('profiles:login') }}">Войти в аккаунт</a></p>
    <br>
    <p><a href="{{ url('profiles:register') }}">Регистрация</a></p>
    {% endif %}

      </div>
    </div>
  </div>
</div>
{% endblock %}
