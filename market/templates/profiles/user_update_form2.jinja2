{% extends 'base.jinja2' %}

{% block title %}
Информация о пользователе
{% endblock %}

{% block middle %}
{% if user.is_authenticated %}


<div class="Middle Middle_top">
    <div class="Section Section_column Section_columnLeft">
        <div class="wrap">
<!--========================= SIDE BAR! НАЧАЛО =========================-->
            <div class="Section-column">
                <div class="Section-columnSection">
                    <header class="Section-header">
                        <strong class="Section-title">Навигация
                        </strong>
                    </header>
                    <div class="Section-columnContent">
                        <div class="NavigateProfile">
                            <ul class="menu menu_vt">
                                <li class="menu-item">
                                    <a class="menu-link" href="{{ url('profiles:about-user') }}">Личный кабинет</a>
                                </li>
                                <li class="menu-item_ACTIVE menu-item">
                                    <a class="menu-link" href="#">Профиль</a>
                                </li>
                                <li class="menu-item">
                                    <a class="menu-link" href="{{ url('orders:history') }}">История заказов</a>
                                </li>
                                <li class="menu-item">
                                    <a class="menu-link" href="{{ url('profiles:change-password') }}">Сменить пароль</a>
                                </li>
                                <li class="menu-item">
                                    <a class="menu-link" href="{{ url('products:home-page') }}">На главную</a>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
<!--========================= SIDE BAR!  КОНЕЦ  =========================-->
            <div class="Section-content">
                <div class="Profile">
                    <div class="row-block">
                        <h2 class="Section-title">Редактирование профиля</h2>
                        <h3 class="header">Здравствуйте, {{ user.username }}</h3>
                    </div>
                </div>
                <div class="row">
<!--============ Изменение информации о пользователе!  НАЧАЛО ============-->
                    <div class="row-block">
                       <form method="post">
                           {% csrf_token %}
                           {{ form.as_p() }}
                       <button type="submit">Обновить информацию</button>
                       </form>

                    </div>
                    <div class="row-block"></div>
                </div>
<!--============ Изменение информации о пользователе!  КОНЕЦ ============-->
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
