<header class="Section-header">
    <h2 class="Section-title">{{_("Товары участвующие в акции:")}}</h2>
</header>
<div class="Cards">
    {% for product in all_products(object) %}
        <div class="Card">
            <a class="Card-picture" href="{{ url('products:product-detail', pk=product.pk ) }}"><img src="{{ product.preview.url }}" alt="card.jpg" style="width: 200px;"/></a>
            <div class="Card-content">
                <strong class="Card-title"><a href="{{ url('products:product-detail', pk=product.pk ) }}">{{ product.about }}</a>
                </strong>
                <div class="Card-description">
                    <div class="Card-cost"><span class="Card-price">{{ product.offers.first().price }}₽</span>
                    </div>
                    <div class="Card-category">{{ product.category.name }}
                    </div>
                    <div class="Card-hover">
                         <form action="{{ url('cart:add_cart') }}" method="post">
                             {% csrf_token %}
                             <input type="hidden" name="offer_id" value="{{ product.offers.first().pk }}">
                             <input type="hidden" name="amount" value="1">
                             <button class="Card-btn" type="submit" onmouseover="this.style.backgroundColor='#d2e7ff';" onmouseout="this.style.backgroundColor='#ebebeb';">
                                 <img src="{{ static('assets/img/icons/card/cart.svg') }}" alt="cart.svg"/>
                             </button>
                         </form>
                         <form action="{{ url('comparison:comparison_add') }}" method="post">
                            {% csrf_token %}
                            <input type="hidden" id="product_id" name="product_id" value="{{ product.pk }}">
                            <button class="Card-btn" type="submit" onmouseover="this.style.backgroundColor='#d2e7ff';" onmouseout="this.style.backgroundColor='#ebebeb';">
                                <img src="{{ static('assets/img/icons/card/change.svg') }}" alt="change.svg"/>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
